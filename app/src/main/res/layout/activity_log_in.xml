<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:background="@drawable/loginpagebackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_margin="30dp"
        app:cardElevation="50dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="24dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@color/lavanta"
                >

            </TextView>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/emailhere"
                android:hint="Email"
                android:drawableLeft="@drawable/emailvector"
                android:layout_marginTop="50dp"
                android:drawablePadding="6dp"
                android:padding="10dp"
                android:background="@drawable/lavantaborder"
                android:textColor="@color/black"
                >


            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/passhere"
                android:hint="Password"
                android:drawableLeft="@drawable/lockvector"
                android:layout_marginTop="50dp"
                android:drawablePadding="6dp"
                android:padding="10dp"
                android:background="@drawable/lavantaborder"
                android:textColor="@color/black"
                >


            </EditText>

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonbackground"
                android:onClick="loginn"
                android:text="LogÄ±n"
                android:textColor="@color/white"


                android:textSize="18dp">

            </Button>

            <TextView
                android:id="@+id/signuptext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not yet registered? Sign up"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                >

            </TextView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>